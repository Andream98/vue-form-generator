{
	"root": true,
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/strongly-recommended",
		"@vue/prettier"
	],
	"rules": {
		"indent": [
			1,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			1,
			"double",
			{
				"allowTemplateLiterals": true,
				"avoidEscape": true
			}
		],
		"semi": [
			2,
			"always"
		],
		"no-var": [
			2
		],
		"no-console": [
			0
		],
		"no-unused-vars": [
			1
		],
		"no-throw-literal": 0,
		"eqeqeq": [
			2,
			"smart"
		],
		"vue/name-property-casing": [
			0,
			"kebab-case"
		],
		"vue/max-attributes-per-line": [
			2,
			{
				"singleline": 1,
				"multiline": {
					"max": 1,
					"allowFirstLine": true
				}
			}
		],
		"vue/html-closing-bracket-newline": [
			2,
			{
				"singleline": "never",
				"multiline": "never"
			}
		],
		"vue/html-self-closing": [
			2,
			{
				"html": {
					"void": "never",
					"normal": "never",
					"component": "never"
				},
				"svg": "never",
				"math": "never"
			}
		],
		"vue/html-indent": [
			2,
			"tab",
			{
				"attribute": 1,
				"closeBracket": 0,
				"alignAttributesVertically": true,
				"ignores": []
			}
		]
	},
	"parserOptions": {
		"parser": "babel-eslint"
	}
}
